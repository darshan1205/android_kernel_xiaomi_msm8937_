config MACH_XIAOMI_MSM8917
        bool "Xiaomi MSM8917"
        depends on ARCH_MSM8917
        help
          Support for MSM8917 Xiaomi variants

config MACH_XIAOMI_MSM8937
	bool "Xiaomi MSM8937"
	depends on ARCH_MSM8937
	help
	  Support for MSM8937 Xiaomi variants

menu "Xiaomi board selection"

config MACH_XIAOMI_LAND
	bool "land board"
	select MACH_XIAOMI_MSM8937
	help
	  Support for Redmi 3S/Prime/Plus/3X land

config MACH_XIAOMI_ROLEX
        bool "rolex board"
        select MACH_XIAOMI_MSM8917
        help
          Support for Redmi 4A rolex
endmenu
